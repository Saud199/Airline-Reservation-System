<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.abc.emiratesairlines.ContactusActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <ImageView

                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/telephone"
                android:layout_weight="0.5"
                />

            <TextView
                android:layout_width="129dp"
                android:layout_height="130dp"
                android:text="@string/tellno"
                android:layout_weight="1"
                android:textColor="@color/signup_clr"
                android:textSize="16.5dp"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <ImageView

                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/bed"
                android:layout_weight="0.5"
                />

            <TextView
                android:layout_width="129dp"
                android:layout_height="130dp"
                android:text="@string/hotel_booking"
                android:layout_weight="1"
                android:textColor="@color/signup_clr"
                android:textSize="16.5dp"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <ImageView

                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/car"
                android:layout_weight="0.5"
                />

            <TextView
                android:layout_width="129dp"
                android:layout_height="130dp"
                android:text="@string/car_hire"
                android:layout_weight="1"
                android:textColor="@color/signup_clr"
                android:textSize="16.5dp"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <ImageView

                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/tourbus"
                android:layout_weight="0.5"
                />

            <TextView
                android:layout_width="129dp"
                android:layout_height="130dp"
                android:text="@string/tourbus"
                android:layout_weight="1"
                android:textColor="@color/signup_clr"
                android:textSize="16.5dp"
                />


        </LinearLayout>



    </LinearLayout>

</ScrollView>
