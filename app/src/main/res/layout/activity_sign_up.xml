<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.abc.emiratesairlines.SignUpActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please Fill out the following details"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:textColor="@color/signup_clr"
            android:layout_marginBottom="30dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textColor="@color/signup_clr"
                android:layout_margin="10dp"
                android:textSize="20dp"/>

            <EditText
                android:id="@+id/getname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="Enter Your Name"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Phone No"
                android:textColor="@color/signup_clr"
                android:layout_margin="10dp"
                android:textSize="20dp"/>

            <EditText
                android:id="@+id/getphoneno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:inputType="phone"
                android:hint="Enter Your Phone No"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Verification Code"
                android:textColor="@color/signup_clr"
                android:layout_margin="10dp"
                android:textSize="19dp"/>

            <EditText
                android:id="@+id/ver_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:inputType="number"
                android:hint="Enter Your Code"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Account Type"
                android:textColor="@color/signup_clr"
                android:layout_margin="10dp"
                android:textSize="20dp"/>

            <Spinner
                android:id="@+id/select_acc_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/acc_type"
                android:layout_marginTop="15dp">

            </Spinner>

        </LinearLayout>

        <EditText
            android:id="@+id/admin_key"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:inputType="number" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_below="@+id/detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:padding="5dp"
            android:layout_alignParentStart="true" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">

            <Button
                android:id="@+id/get_ver_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Get Code"
                android:layout_margin="10dp"
                android:background="@drawable/roundedbutton"
                android:textStyle="bold"/>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">

            <Button
                android:id="@+id/get_resend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Resend Code"
                android:layout_margin="10dp"
                android:background="@drawable/roundedbutton"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/verify_code_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Verify Code"
                android:layout_margin="10dp"
                android:background="@drawable/roundedbutton"
                android:textStyle="bold"/>


        </LinearLayout>




    </LinearLayout>




</ScrollView>
